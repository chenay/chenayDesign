<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <!-- 高度40 -->
            <size android:width="@dimen/switch_width" android:height="@dimen/switch_height"/>
            <!-- 圆角弧度 -->
            <corners android:radius="@dimen/dp_2"/>
            <!-- 变化率 -->
            <gradient
                android:endColor="#1AB9F1"
                android:startColor="#1AB9F1"/>

            <padding android:bottom="@dimen/dp_0_5" android:left="@dimen/dp_0_5" android:right="@dimen/dp_0_5" android:top="@dimen/dp_0_5"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <size android:width="@dimen/switch_width" android:height="@dimen/switch_height"/>
            <!-- 圆角弧度 20 -->
            <corners android:radius="@dimen/dp_2"/>

            <!-- 变化率 -->
            <gradient
                android:endColor="#1AB9F1"
                android:startColor="#1AB9F1"/>
            <padding android:bottom="@dimen/dp_0_5" android:left="@dimen/dp_0_5" android:right="@dimen/dp_0_5" android:top="@dimen/dp_0_5"/>
        </shape>
    </item>
</selector>